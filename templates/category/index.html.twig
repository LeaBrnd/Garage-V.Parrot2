{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1> Tous nos modèles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}"> Consulter la page </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun modèle trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
