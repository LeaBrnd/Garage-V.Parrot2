{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>Fuel</th>
                <td>{{ car.fuel }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ car.content }}</td>
            </tr>
        </tbody>
    </table>

    <div>
    <a href="{{ path('app_comment_new', {'id': car.id}) }}"> Ajouter un commentaire </a>
    </div> 

    <div>
       {% for comment in comments %}
       
       <div> {{ comment.user.email}} a dit : </div>
         <div> {{ comment.content}} </div>
       {% endfor%}

    </div>
{% endblock %}
